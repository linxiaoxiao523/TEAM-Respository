
page {
	background-size: 100% 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.container {
	width: 100%;
	padding: 20px;
	overflow: scroll;
}
.title {
	height: 40px;
	line-height: 40px;
	font-size: 20px;
	text-align: center;
	font-weight: 500;
}
.start {
	position: fixed;
	height: 0;
	border-top: none;
	border-bottom: 24px;
	bottom: 0px;
}
.uni-list-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	/*align-items: left;垂直居中*/
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	/*水平居中*/
	border-width: 1px;
	border-style: solid;
	border-color: #E5E5E5;
}
.part {
	background-color: #d4cfcf;
	padding: 10rpx;
}
.footer {
	line-height: 100rpx;
	-webkit-box-flex: 0;
	-webkit-flex: 0 0 100rpx;
	        flex: 0 0 100rpx;
}
.add {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	/*align-items: left;垂直居中*/
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	/*水平居中*/
	margin-right: 1px;
	margin-top: auto;
	font-size: 1px;
}

